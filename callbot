#!/usr/bin/env php
<?php

require "vendor/autoload.php";

use Symfony\Component\Console\Application;
use Indatus\Callbot\Commands\CallMultiCommand;
use Indatus\Callbot\Commands\CallSingleCommand;
use Indatus\Callbot\Commands\CallDetailsCommand;
use Indatus\Callbot\Factories\FileSystemFactory;
use Indatus\Callbot\Factories\CallServiceFactory;

$application = new Application;

$application->add(
    new CallSingleCommand(new CallServiceFactory, new FileSystemFactory)
);

$application->add(
    new CallMultiCommand(new CallServiceFactory, new FileSystemFactory)
);

$application->add(
    new CallDetailsCommand(new CallServiceFactory, new FileSystemFactory)
);

$application->run();
